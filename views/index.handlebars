<div class="container bg">
	
	<div class="row">
	    <div class="center col-sm-12">
			
	        <h1>Eat the burger app</h1>
					<img class="photo" src="https://images.unsplash.com/photo-1540981493580-8ea1113e9968?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60" height="200px" width="200px" alt="burger">
	        <p></p>
	    </div>
  	</div>


	<div class="row">
	    <div class="col-sm-6">

			<br>
			<h2>Burgers you can eat</h2>

			<ul>
			  {{#each burgers}}
			    {{#unless this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}} 

			       
			          <button data-id ="{{this.id}}" class="burgbtn">Devour It!</button>
			      
															
			      </li>
			    {{/unless}}
			  {{/each}}    
			</ul>

	    </div>

	    <div class="col-sm-6">

			<h2>Burgers you ate </h2>
			
			  {{#each burgers}}
			    {{#if this.devoured}}
			      <li>
			      	{{this.id}}
			        {{this.burger_name}}

			      </li>
			    {{/if}}
			  {{/each}}
			
	    </div>

  	</div>
	

	<div class="row">
	    <div class="center col-sm-12">

			<h2>Add another burger</h2>

			<form class="create-update-form"   method="POST">

			  <div class="form-group">
			    <p>Pick a burger you would like to add to the menu.</p>
			    <input type="text" id="ca" name="burger_name">
			  </div>
			  
			  <button class="btn-primary create-form" type="submit">Submit Order</button>
			</form>

	    </div>
	
  	</div>
	

</div>